@model blog_web.Models.Post

@{
    ViewData["Title"] = "Sửa bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles{
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    @*<link href="~/AdminAssets/lib/select2/css/select2.min.css" rel="stylesheet" />*@
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"> <a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"> <a asp-area="Admin" asp-controller="Posts" asp-action="Index">DANH SÁCH TIN ĐÃNG</a></li>
        <li class="breadcrumb-item active" aria-current="page">Sửa bài viết</li>
    </ol>
    <h6 class="slim-pagetitle">Sửa bài viết</h6>
</div><!-- slim-pageheader -->


<div class="section-wrapper">
    <div class="form-layout">
        <form asp-area="Admin" asp-controller="Post" asp-action="Details" method="post">
            
            <input type="hidden" asp-for="PostId" />

            <input type="hidden" asp-for="Author" />
            <input type="hidden" asp-for="AccountId" />

            <input type="hidden" asp-for="Thumb" />
            <input type="hidden" asp-for="CreatedAt" />

            <div class="row mg-b-25">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">Tiêu đề: <span class="tx-danger">*</span></label>
                        <input asp-for="Title" type="text" class="form-control" placeholder="Tiêu đề" readonly />
                    </div>
                </div><!-- col-12 -->
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label">Miêu tả ngắn: <span class="tx-danger">*</span></label>
                        <input asp-for="ShortContent" type="text" maxlength="254" class="form-control" placeholder="Miêu tả ngắn" readonly />
                    </div>
                </div><!-- col-12 -->
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label">Danh Mục: <span class="tx-danger">*</span></label>
                        <input asp-for="Cat.CatName" class="form-control" readonly />
                    </div>
                </div><!-- col-6 -->

                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="form-group text-center">
                            <img id="ProfilePicturePreview_Thumb" src="@Model.Thumb" onerror="this.onerror = null;
                            this.src = '@Model.Thumb'" alt="" style="width:200px;height:200px" />
                        </div>
                    </div>
                </div><!-- col-6-- Ảnh đại diện -->

                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label">Author: <span class="tx-danger">*</span></label>
                        <input asp-for="Author" readonly />
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">CreatedAt:</label>
                        <input asp-for="CreatedAt" readonly />
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group">
                        <input type="checkbox" asp-for="Published" disabled><span> Published</span>
                    </div>

                    <div class="form-group">
                        <input type="checkbox" asp-for="IsHot" disabled /><span> IsHot</span>
                    </div>

                    <div class="form-group">
                        <input type="checkbox" asp-for="IsNewFeed" disabled /><span> IsNewfeed</span>
                    </div>
                </div><!-- col-6 -->

                <div class="col-lg-12">
                    <div class="form-group">
                        <label asp-for="Contents" class="form-control-label"></label>
                        <textarea asp-for="Contents" disabled> </textarea>
                        <span asp-validation-for="Contents" class="text-danger"></span>
                    </div><!-- col-12 -->
                </div>

                <div class="form-layout-footer">
                    <button asp-route-id="@Model.PostId" class="btn btn-danger bd-0">Edit</button>
                    <button asp-area="Admin" asp-controller="Posts" asp-action="Index" class="btn btn-secondary bd-0">Cancel</button>
                </div><!-- form-layout-footer -->
            </div>
        </form>

    </div><!-- form-layout -->
</div>

@section Scripts_Admin{
    <script>
        $('#Thumb').ready(function () {
            var output = document.getElementById('ProfilePicturePreview_Thumb');
            output.src = $("#Thumb").val();
        })
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script src="~/AdminAssets/lib/select2/js/select2.min.js"></script>
    <script>
        jQuery(document).ready(function () {
            $('#Contents').summernote("disable");
        });
    </script>
}




