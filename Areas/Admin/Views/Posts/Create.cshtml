@model blog_web.Models.Post

@{
    ViewData["Title"] = "Tạo mới bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section Styles{
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
}
<div class="main-content">
    <div class="slim-pageheader">
        <ol class="breadcrumb slim-breadcrumb">
            <li class="breadcrumb-item"> <a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"> <a asp-area="Admin" asp-controller="Posts" asp-action="Index">DANH SÁCH TIN ĐÃNG</a></li>
            <li class="breadcrumb-item active" aria-current="page">TẠO MỚI TIN ĐĂNG</li>
        </ol>
        <h6 class="slim-pagetitle"> TẠO MỚI TIN ĐĂNG</h6>
    </div><!-- slim-pageheader -->


    <div class="card">
        <div class="card-body">
            <form enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row mg-b-25">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label">Tiêu đề: <span class="tx-danger">*</span></label>
                            <input asp-for="Title" type="text" class="form-control" placeholder="Tiêu đề" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div><!-- col-12 -->
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label">Miêu tả ngắn: <span class="tx-danger">*</span></label>
                            <input asp-for="ShortContent" type="text" maxlength="254" class="form-control" placeholder="Miêu tả ngắn" />
                            <span asp-validation-for="ShortContent" class="text-danger"></span>
                        </div>
                    </div><!-- col-12 -->
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-control-label">Danh Mục: <span class="tx-danger">*</span></label>
                            <select asp-for="CatId" class="form-control" asp-items="ViewBag.Categories"></select>
                            <span asp-validation-for="CatId" class="text-danger"></span>
                        </div>
                    </div><!-- col-6 -->
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-control-label">Ảnh đại diện: <span class="tx-danger">*</span></label>
                            <span asp-validation-for="Thumb" class="text-danger"></span>

                            <div class="custom-file">
                                <input asp-for="Thumb" name="fThumb" type="file" id="fThumb" required>
                                <label id="fThumb_name" for="customFile"></label>
                            </div>
                        </div>
                    </div><!-- col-6-- Ảnh đại diện -->

                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-control-label">CreatedAt:</label>
                            <input type="date" asp-for="CreatedAt" />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <input type="checkbox" asp-for="Published"><span> Published</span>
                        </div>

                        <div class="form-group">
                            <input type="checkbox" asp-for="IsHot"><span> IsHot</span>
                        </div>

                        <div class="form-group">
                            <input type="checkbox" asp-for="IsNewFeed"><span> IsNewfeed</span>
                        </div>
                    </div><!-- col-6 -->

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label asp-for="Contents" class="form-control-label"></label>
                            <textarea asp-for="Contents"> </textarea>
                            <span asp-validation-for="Contents" class="text-danger"></span>
                        </div><!-- col-12 -->
                    </div>

                    <div class="col-lg-12">
                        <button asp-area="Admin" asp-controller="Posts" asp-action="Create" class="btn btn-primary bd-0">Create</button>
                        <button asp-area="Admin" asp-controller="Posts" asp-action="Index" class="btn btn-secondary bd-0">Cancel</button>
                    </div><!-- form-layout-footer -->
                </div>
            </form>
        </div><!-- form-layout -->
    </div>
</div>



@section Scripts_Admin{
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script src="~/AdminAssets/lib/select2/js/select2.min.js"></script>
    <script>
        jQuery(document).ready(function () {
            $('#Contents').summernote({
                placeholder: 'write here...',
                fontNames: ['Arial', 'Arial Black'],
                styleTags: [
                    'p',
                    'pre', 'h1', 'h2', 'h3', 'h4', 'h5', 'h6'
                ],
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'underline', 'clear']],
                    ['para', ['ul', 'ol', 'paragraph']],
                ],
            });
        });
    </script>
}

